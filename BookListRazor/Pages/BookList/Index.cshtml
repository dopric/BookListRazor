@page
@model BookListRazor.IndexModel
@{
    ViewData["Title"] = "Book List";
}


<div class="container row p-0 m-0">
    <div class="col-9">
          <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white"
           asp-page="Create">
            Create new Book
        </a> 
    </div>

    <div class="col-12 border pt-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th/>
                    </tr>
                    @foreach(var book in Model.Books)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m=>book.Name)</td>
                            <td>@book.Author</td>
                            <td>@Html.DisplayFor(m=>book.ISBN)</td>
                            <td>
                                <button class="btn btn-danger btn-sm"
                                        onclick="return confirm('Delete?')"
                                        asp-page-handler="Delete" asp-route-id="@book.Id">
                                    Delete
                                </button>
                                <a class="btn btn-success btn-sm text-white"
                                   asp-page="Edit" 
                                   asp-route-id="@book.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>
</div>

<div class="col-12" style="text-align:center;">
    <br />
    <span class="h3 text-info">Or</span>
    <br />
    <br />
</div>
